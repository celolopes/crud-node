<div class="p-5 rounded mt-3">
    <h1>Listar Usuários</h1>
    {{#if table}}
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each usuarios}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{nome}}</td>
                <td>{{email}}</td>
                <td>
                    <div class="row g-1">
                        <div class="col-6 col-md-5">
                            <form action="/editar" method="post">
                                <input type="hidden" name="id" value="{{id}}">
                                <button class="w-100 btn btn-info">Editar</button>
                            </form>
                        </div>
                        <div class="col-6 col-md-5">
                            <button data-bs-toggle="modal" data-bs-target="#deleteModal_{{id}}" class="w-100 btn btn-danger">Apagar</button>
                        </div>
                    </div>
                </td>
            </tr>
            <!-- Modal -->
            <div class="modal fade" id="deleteModal_{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">CONFIRMAÇÃO</h1>
                            <button type="type" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body fw-bold text-danger">
                            Tem certeza que quer deletar o usuário {{nome}}
                        </div>
                        <div class="modal-footer">
                            <form action="/del" method="post">
                                <input type="hidden" name="id" value="{{id}}">
                                <button type="submit" class="btn btn-danger">Sim, quero deletar</button>
                            </form>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <div class="'card mt-4">
        <div class="card-body">
            Nenhum dado encontrado!
        </div>
    </div>
    {{/if}}
</div>